@model Biblioteca.Aplicacao.ViewModels.LivroViewModel
@{
    ViewData["Title"] = "Detalhes do Livro";
}
<h1>Detalhes</h1>
<dl class="row">
    <dt class="col-sm-2">Título</dt><dd class="col-sm-10">@Model.Titulo</dd>
    <dt class="col-sm-2">Autor</dt><dd class="col-sm-10">@Model.AutorNome</dd>
    <dt class="col-sm-2">Gênero</dt><dd class="col-sm-10">@Model.Genero</dd>
    <dt class="col-sm-2">Ano</dt><dd class="col-sm-10">@Model.AnoPublicacao</dd>
</dl>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
